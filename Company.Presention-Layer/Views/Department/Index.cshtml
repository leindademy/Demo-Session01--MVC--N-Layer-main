@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Department" asp-action="Create" class="btn btn-success">Create New Department</a>
@* 
		  <div class="mt-5 p-3 alert-warning">
			<h3>@TempData["TextMessage"]</h3>
		</div> *@
@if(Model.Count() != 0)
{
	<table class="table">
	<thead>
		<tr>
				<th scope="col">@Html.DisplayNameFor(D => D.Code)</th>
				<th scope="col">@Html.DisplayNameFor(D => D.Name)</th>
				<th scope="col">@Html.DisplayNameFor(D => D.CreateAt)</th>
				<th scope="col">Details</th>
				<th scope="col">Update</th>
				<th scope="col">Delete</th>
		</tr>
		</thead>
		<tbody>
			@foreach(var Department in Model)
			{
				<tr>
					<td>@Department.Code</td>
					<td>@Department.Name</td>
					<td>@Department.CreateAt</td> 
					<partial name="_ActionButtonsPartialView" model="Department.Id.ToString()" />
				</tr>
			}
		</tbody>
	</table>
}


