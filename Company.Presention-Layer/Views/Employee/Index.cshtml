@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>

<p><a color="gray" class="btn btn-success asp-controller="Employee" asp-action="Create">Create New Employee </a></p>
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row offest-2 col-8">
        <div class="col-6" >
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name"/>
        </div>
        <div class="col-6">
            <input type="Submit" value="Search" class="btn btn-success" />
        </div>

    </form>
</div>
